@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid text-center mt-3">
    <div class="row">
        <div class="col-lg-9">
            <div class="row h32">
                <div class="col-md-3">
                    <div *ngIf="game">
                        <img src="~/Content/Images/dealer.png" />
                        <p id="dealer-name" class="caption player-name"></p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div id="dealer-hand" class="playingCards simpleCards">
                    </div>
                </div>
                <div clas="col-md-3">
                    <div id="error-message" class="alert alert-danger" role="alert">
                        
                    </div>
                </div>
            </div>
            <div class="row h32">
                <div class="col-md-3">
                    <div class="caption">Choose the number of bots</div>
                    <div class="input-group">
                        <span class="input-group-btn">
                            <button id="dec-bots-btn" type="button" class="btn btn-danger btn-number">
                                <span>-</span>
                            </button>
                        </span>
                        <input id="bots-number" disabled type="text" class="bots-input form-control input-number" value="0">
                        <span class="input-group-btn">
                            <button id="inc-bots-btn" type="button" class="btn btn-success btn-number">
                                <span>+</span>
                            </button>
                        </span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="caption">Choose your bet</div>
                    <div class="slidecontainer">
                        <input id="bet-slider" type="range" min="50" max="100" value="50" step="5" class="slider">
                    </div>
                    <h3 id="bet-output">50</h3>
                    <div class="btn-group-vertical">
                        <button id="new-game-btn" type="button" class="btn btn-primary">NEW GAME</button>
                        <button id="load-game-btn" type="button" class="btn btn-secondary">LOAD GAME</button>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="caption">Actions</div>
                    <div class="btn-group-vertical">
                        <button id="hit-btn" class="btn btn-primary">HIT</button>
                        <button id="double-btn" class="btn btn-info">DOUBLE</button>
                        <button id="stand-btn" class="btn btn-secondary">STAND</button>
                        <button id="surrender-btn" class="btn btn-danger">SURRENDER</button>
                    </div>
                </div>
                <div class="player-seat col-md-3">
                    <span id="player-result-message"></span>
                    <p id="player-name" class="caption player-name"></p>
                    <div id="player-hand" class="playingCards simpleCards rotateHand">
                    </div>
                </div>
            </div>
            <div id="bot-seats" class="row">
            </div>
        </div>
        <div class="col-lg-3">
            
        </div>
    </div>
</div>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/game")