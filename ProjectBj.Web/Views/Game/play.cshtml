@model ProjectBj.ViewModels.Game.GameViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Play</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    <script type="text/javascript">
        var bots = @Html.Raw(Json.Encode(Model.Bots));
        for (var i = 0; i < bots.length; i++) {
            document.getElementById("hand-" + i).innerHTML+= ""
        }
    </script>
    <div class="container-fluid text-center">
        <div class="row">
            <div class="col-lg-9">
                <div class="row h33">
                    <div class="col-md-12">
                        <p>Dealer</p>
                        <div id="hand-dealer" class="hand top">
                            
                        </div>
                    </div>
                </div>
                <div class="row h33">
                    <div class="col-md-3">
                        <span class="badge badge-pill badge-secondary">00</span><p>Player</p>
                        <div id="hand-player" class="hand left">
                            
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div>Choose your bet</div>
                        <div class="slidecontainer">
                            <input type="range" min="50" max="100" value="50" step="5" class="slider" id="bet_range">
                        </div>
                        <h3 id="bet_output">50</h3>
                        <button type="button" class="btn btn-primary">HIT</button>
                        <button type="button" class="btn btn-secondary">STAND</button>
                    </div>
                    <div class="col-md-3">
                        <span class="badge badge-pill badge-secondary">00</span><p>Bot 1</p>
                        <div id="hand-0" class="hand right">
                            
                        </div>
                    </div>
                </div>
                <div class="row h33">
                    <div class="col-md-3">
                        <span class="badge badge-pill badge-secondary">00</span><p>Bot 2</p>
                        <div id="hand-1" class="hand left-corner">
                            
                        </div>
                    </div>
                    <div class="col-md-3">
                        <span class="badge badge-pill badge-secondary">00</span><p>Bot 3</p>
                        <div id="hand-2" class="hand bottom">
                            
                        </div>
                    </div>
                    <div class="col-md-3">
                        <span class="badge badge-pill badge-secondary">00</span><p>Bot 4</p>
                        <div id="hand-3" class="hand bottom">
                            
                        </div>
                    </div>
                    <div class="col-md-3">
                        <span class="badge badge-pill badge-secondary">00</span><p>Bot 5</p>
                        <div id="hand-4" class="hand">
                            
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-1">
                <p>Game Log</p>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
