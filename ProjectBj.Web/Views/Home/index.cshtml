@model ProjectBj.ViewModels.GameSettings

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>index</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    @using (@Html.BeginForm("Play", "Game"))
    {
    <div class="container w-50 mt-5">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">Enter your name</span>
            </div>
            <input id="player-name" type="text" class="form-control" />
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">Number of bots</span>
            </div>
            <input id="slider-bots" type="range" min="0" max="5" value="0" step="1" class="slider" />
            <div class="input-group-append">
                <span id="bots-number" class="input-group-text">0</span>
            </div>
        </div>
        <input id="play-button" type="submit" class="btn btn-outline-primary" value="PLAY" />
    </div>
    }
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
