@model ProjectBj.ViewModels.GameSettings

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>index</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    <div>
        @using (@Html.BeginForm("Play", "Game", FormMethod.Post))
        {
            <p>Enter your name:</p>
            @Html.EditorFor(x => x.PlayerName)
            <p>Number of bots:</p>
            @Html.EditorFor(x => x.BotsNumber)
            <p><input type="submit" value="Play"></p>
        }
    </div>
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
